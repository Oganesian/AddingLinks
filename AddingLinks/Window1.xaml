        <TextBox x:Name="fifthBox" Visibility="Hidden" HorizontalAlignment="Left" Height="23" Margin="41,192,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="41,62,0,0" VerticalAlignment="Top" Width="145" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem x:Uid="1"  Content="Электронный ресурс" HorizontalAlignment="Left" Width="145"/>
            <ComboBoxItem Content="Литература" HorizontalAlignment="Left" Width="145"/>
