        <Label Content="Название" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="218,38,0,0"/>
        <TextBox x:Name="secondBox" HorizontalAlignment="Left" Height="23" Margin="218,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="thirdLabel" Content="Гиперссылка" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,104,0,0"/>
        <TextBox x:Name="thirdBox" HorizontalAlignment="Left" Height="23" Margin="41,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
